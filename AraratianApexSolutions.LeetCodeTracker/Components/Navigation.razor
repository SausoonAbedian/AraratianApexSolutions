@inject NavigationManager NavigationManager

<div class="navigation">
    <div class="navigation__logo">
        <a href="/" class="navigation__logo__image-link" />
    </div>
    <div class="navigation__menu-container">
        <a href="/Questions" class="navigation__menu-container__questions-item">
            <div class="@GetClassName("Questions", true)" />
            <div class="@GetClassName("Questions", false)">Questions</div>
        </a>
    </div>
</div>

