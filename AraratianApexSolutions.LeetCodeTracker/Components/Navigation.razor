@code {
    string GetClassName(string linkName, bool isLogo)
    {
        if (isLogo)
        {
            if (NavigationManager.Uri.Contains(linkName) || NavigationManager.Uri == NavigationManager.BaseUri)
            {
                return "navigation__menu-container__questions-item__icon--active";
            }
            else
            {
                return "navigation__menu-container__questions-item__icon";
            }
        }
        else
        {
            if (NavigationManager.Uri.Contains(linkName) || NavigationManager.Uri == NavigationManager.BaseUri)
            {
                return "navigation__menu-container__questions-item__text--active";
            }
            else
            {
                return "navigation__menu-container__questions-item__text";
            }
        }
    }
}
